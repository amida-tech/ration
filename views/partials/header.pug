.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-clock-o
        | Ration
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Dashboard') ? 'active' : undefined)
          a(href='/dashboard') Dashboard
        li(class=(title == 'My Hours') ? 'active' : undefined)
          a(href='/myhours') My Hours
        li(class=(title == 'Reports') ? 'active' : undefined)
          a(href='/reports') Reports
      ul.nav.navbar-nav.navbar-right
        if (!user)
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              if user.roles.indexOf('admin') > -1
                li.divider
                li
                  a(href='/projects') Edit Projects
                  a(href='/users') Edit Users
              li.divider
              li
                a(href='/logout') Logout
