extends ../layout

block content
  h2 Users
  hr
  div.container
    div.content
      table.table.table-bordered#projects_table
        //thead
        //  tr
        //    th(colspan="3") User Management
        tbody
          if users
              each user in users
                tr
                  td.col
                    if user.profile.picture
                      img(src=user.profile.picture)
                    else
                      img(src=user.gravatar(60))
                  td.col-md-10
                    h4 #{user.profile.name || user.email || user.id}
                  td.col
                    if user.roles.indexOf('admin') > -1
                      a.button.btn.btn-block.btn-warning(type='submit' data-user=user.email)#revoke_admin
                        i.fa.fa-close
                        | Revoke Admin
                    else 
                      a.button.btn.btn-block.btn-info(type='submit' data-user=user.email)#make_admin
                        i.fa.fa-wrench
                        | Make Admin         
                    a.button.btn.btn-block.btn-danger(type='submit')
                      i.fa.fa-trash
                      | Remove User
                      
                      
