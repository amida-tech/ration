{
  "name": "ration",
  "description": "Workload dashboard for organizations.",
  "repository": "https://github.com/amida-tech/ration",
  "env": {
    "GOOGLE_CALLBACK": {
      "description": "Google OAuth URL callback",
      "value": "/auth/google/callback"
    },
    "GOOGLE_ID": {
      "description": "Google OAuth application ID"
    },
    "GOOGLE_DOMAIN": {
      "description": "Google apps domain for your organization"
    },
    "GOOGLE_SECRET": {
      "description": "Google OAuth application secret"
    },
    "NODE_ENV": {
      "description": "Application environment",
      "value": "heroku"
    },
    "SESSION_SECRET": {
      "generator": "secret"
    }
  },
  "addons": [
    "mongolab:sandbox",
    "papertrail"
  ]
}